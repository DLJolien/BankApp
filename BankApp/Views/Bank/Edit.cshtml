@model BankEditViewModel;

    <form asp-controller="Bank" asp-action="Edit" method="post">
        <div class="form-group">
            <label asp-for="Description"></label>
            <input asp-for="Description" />
        </div>
        <div class="form-group">
            <label asp-for="Date"></label>
            <input type="datetime-local" asp-for="Date" />
        </div>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text">€</span>
            </div>
            <input asp-for="Amount" type="text" class="form-control">
        </div>
        <div class="form-group">
            <label asp-for="Category"></label>
            <select asp-for="@Model.CategoryId" asp-items="@Model.Category">
            </select>
        </div>
        <div class="form-group">
            <label asp-for="SelectedPersons"></label>
            <select multiple class="form-control" asp-for="SelectedPersons" asp-items="@Model.Person"></select>
            <span class="text-danger" asp-validation-for="SelectedPersons"></span>
        </div>
        <button class="btn-success" type="submit">Save Changes</button>
    </form>